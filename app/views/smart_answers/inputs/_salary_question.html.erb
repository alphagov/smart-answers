<%= render "smart_answers/inputs/caption", question: question %>
<%= render "govuk_publishing_components/components/input", {
  label: {
    text: question.title,
    is_page_heading: true
  },
  name: "response[amount]",
  id: "response",
  heading_size: "l",
  width: 10,
  hint: question.hint,
  suffix: "Â£",
  error_message: question.error,
  value: question.parsed_response[:amount]
} %>
<%= render "govuk_publishing_components/components/select", {
  id: "response_month",
  name: "response[period]",
  heading_size: "m",
  label: "How often?",
  options: [
    {
      text: "per week",
      value: "week",
      selected: question.parsed_response[:period] == "week"
    },
    {
      text: "per month",
      value: "month",
      selected: question.parsed_response[:period] == "month"
    },
    {
      text: "per year",
      value: "year",
      selected: question.parsed_response[:period] == "year"
    }
  ]
} %>

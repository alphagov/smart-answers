<% stylesheet_link_tag "application", media: "all"  # Trigger this without rendering it to ensure it appears in links header %>
<% emergency_banner = render("govuk_web_banners/emergency_banner") %>
<% global_banner =  render("govuk_web_banners/global_banner") %>

<% content_for :body do %>
  <div class="smart_answer">
    <div class="govuk-width-container">
      <%= yield :breadcrumbs %>
      <%= render "govuk_web_banners/recruitment_banner" %>
    </div>
    <main class="govuk-main-wrapper govuk-width-container" id="content" role="main">
      <%= yield %>
    </main>
  </div>
<% end %>

<%= content_for :head do %>
  <%= csp_meta_tag %>
  <%= csrf_meta_tags %>
  <% if content_item %>
    <%= render "govuk_publishing_components/components/meta_tags",
      content_item: content_item,
      strip_dates_pii: true,
      strip_postcode_pii: true %>
  <% end %>
  <% if @meta_section %>
    <meta name="govuk:section" content="<%= @meta_section %>">
  <% end %>
  <%= render_component_stylesheets %>
<% end %>

<%= render "govuk_publishing_components/components/layout_for_public", {
      title: title_for_head(title_prefix: (yield :title_prefix), answer_title: @title),
      emergency_banner:,
      global_banner:,
  } do %>
  <%= yield :body %>
  <%= javascript_include_tag "test-dependencies" if Rails.env.test? %>
<% end %>

